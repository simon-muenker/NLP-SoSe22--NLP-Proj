{
  "debug": false,
  "out_path": "./experiments/train.1.000/transformer/",
  "data": {
    "polarities": {
      "negative": 0,
      "positive": 1
    },
    "train_path": "./data/imdb.train.1.000.csv",
    "eval_path": "./data/imdb.eval.csv",
    "test_path": "./data/imdb.test.csv",
    "options": {
      "generate_ngrams": [],
      "remove_stopwords": false,
      "use_lemmatizer": false
    }
  },
  "model": {
    "encoding": {
      "model": "bert-base-uncased",
      "layers": [
        -1
      ]
    },
    "neural": {
      "hid_size": 126,
      "dropout": 0.5
    }
  },
  "trainer": {
    "seed": 1,
    "epochs": 25,
    "shuffle": true,
    "batch_size": 32,
    "num_workers": 0,
    "report_rate": 1,
    "max_grad_norm": 2.0,
    "optimizer": {
      "lr": 2e-4,
      "weight_decay": 1e-2,
      "betas": [
        0.9,
        0.999
      ],
      "eps": 1e-8
    }
  }
}
