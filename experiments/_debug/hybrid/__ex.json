{
  "out_path": "./experiments/_debug/hybrid/",
  "data": {
    "config": {
      "ngrams": [
        1,
        2
      ],
      "remove_stopwords": true
    }
  },
  "model": {
    "encoding": {
      "model": "bert-base-uncased",
      "layers": [
        -1
      ]
    },
    "neural": {
      "hid_size": 256,
      "dropout": 0.2
    },
    "linguistic": {
      "group_label": "sentiment",
      "polarities": [
        "negative",
        "positive"
      ],
      "ngrams": {
        "1": {
          "pre_selection": 1024,
          "shared": "remove",
          "post_selection": 512
        },
        "2": {
          "pre_selection": 128,
          "shared": "remove",
          "post_selection": 64
        }
      }
    }
  },
  "trainer": {
    "seed": 1,
    "epochs": 25,
    "shuffle": true,
    "batch_size": 4,
    "num_workers": 0,
    "report_rate": 1,
    "max_grad_norm": 2.0,
    "optimizer": {
      "lr": 2e-4,
      "weight_decay": 1e-2,
      "betas": [
        0.9,
        0.999
      ],
      "eps": 1e-8
    }
  }
}