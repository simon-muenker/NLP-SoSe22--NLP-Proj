{
  "data": {
    "config": {
      "ngrams": [
        1,
        2
      ],
      "remove_stopwords": true
    }
  },
  "model": {
    "encoding": {
      "model": "bert-base-uncased",
      "layers": [
        -1
      ]
    },
    "neural": {
      "hid_size": 256,
      "dropout": 0.3
    },
    "linguistic": {
      "group_label": "sentiment",
      "polarities": [
        "negative",
        "positive"
      ],
      "ngrams": {
        "1": {
          "most_common": 512,
          "shared": "subtract"
        },
        "2": {
          "most_common": 64,
          "shared": "subtract"
        }
      }
    },
    "trainer": {
      "seed": 1,
      "epochs": 25,
      "shuffle": true,
      "batch_size": 4,
      "num_workers": 0,
      "report_rate": 1,
      "max_grad_norm": 2.0,
      "optimizer": {
        "lr": 2e-4,
        "weight_decay": 1e-2,
        "betas": [
          0.9,
          0.999
        ],
        "eps": 1e-8
      }
    }
  }
}